{
	"compilerOptions": {
		"lib": ["ES2021", "ESNext"],
		"module": "commonjs",
		"moduleResolution": "Node",
		"outDir": "./lib",
		"target": "ESNext",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
		"importHelpers": true
	},
    "include": ["lib"],
	"exclude": ["node_modules"]
}